{
    "manifest_version": 3,
    "name": "RiftOS",
    "short_name": "RiftOS",
    "description": "Ready to get beatiful system?",
    "theme_color": "#fff",
    "background_color": "#fff",
    "display": "standalone",
    "protocol_handlers": [
    {
      "protocol": "web+nova",
      "url": "/?path=%s"
